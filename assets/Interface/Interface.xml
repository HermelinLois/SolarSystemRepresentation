<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>

    <screen id="start" controller="fr.univtln.hermelin.MasterMI1.SolarSystemRepresentation.MyScreenController">
        <layer id="background" backgroundColor="#0000" childLayout="center">
            <panel id="panel" width="20%" height="100%" align="right" valign="center" backgroundColor="#00f8" visibleToMouse="true">
                <text id="infoText" font="Interface/Fonts/Default.fnt" color="#0ff" text="Sci-Fi Information" align="center" valign="center"/>
            </panel>
        </layer>
    </screen>
</nifty>